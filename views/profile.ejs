<body dir="rtl">
    <nav class="navbar navbar-expand-lg navbar-dark background">
        <a class="navbar-brand" href="/">وبلاگ</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/logout" tabindex="-1" aria-disabled="true">خروج</a>
                </li>
            </ul>
        </div>
    </nav>
    <br>
    <div class="container text-right p-0">
        <div class="row p-0">
            <div class="col-8 p-0" style="background-color: blue;">
                <div class="col-6 m-0">
                    <% if (editable) { %>
                        <div class="d-flex justify-content-between">
                            <span>نام کاربری:</span>
                            <input type="text" name="username" id="username" value=<%= user.username %>>
                        </div>
                    <% } else { %>
                        <div class="d-flex justify-content-between">
                            <span>نام کاربری:</span>
                            <span class="text-left"><%= user.username %></span>
                        </div>
                    <% } %>
                </div>
                <div class="col-6 m-0">
                    <% if (editable) { %>
                        <div class="d-flex justify-content-between">
                            <span>نام:</span>
                            <input type="text" name="fname" id="fname" value=<%= user.fname %>>
                        </div>
                    <% } else { %>
                        <div class="d-flex justify-content-between">
                            <span>نام:</span>
                            <span class="text-left"><%= user.lname %></span>
                        </div>
                    <% } %>
                </div>
                <div class="col-6 m-0">
                    <% if (editable) { %>
                        <div class="d-flex justify-content-between">
                            <span>نام خانوادگی:</span>
                            <input type="text" name="lname" id="lname" value=<%= user.lname %>>
                        </div>
                    <% } else { %>
                        <div class="d-flex justify-content-between">
                            <span>نام خانوادگی:</span>
                            <span class="text-left"><%= user.lname %></span>
                        </div>
                    <% } %>
                </div>
                <div class="col-6 m-0">
                    <% if (editable) { %>
                        <div class="d-flex justify-content-between">
                            <span>شماره:</span>
                            <input type="number" name="mobile" id="mobile" value=<%= user.mobile %>>
                        </div>
                    <% } else { %>
                        <div class="d-flex justify-content-between">
                            <span>شماره:</span>
                            <span class="text-left"><%= user.number %></span>
                        </div>
                    <% } %>
                </div>
                <div class="col-6 m-0">
                    <% if (editable) { %>
                        <div class="d-flex justify-content-between">
                            <span>رمز عبور جدید:</span>
                            <input type="password" name="password" id="newPassword">
                        </div>
                    <% } %>
                </div>
                <div class="col-6 m-0 input-size" contenteditable="false">
                    <% if (editable) { %>
                        <input id="profileEditButton" class="btn btn-primary" type="button" value="تغییر">
                    <% } %>
                </div>
            </div>
            <div class="col-4" style="background-color: red;">
                تغییر عکس
            </div>
        </div>
    </div>
